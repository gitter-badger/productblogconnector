$blogPosts = $this->getBlogPosts();
?>

<?php if (count($blogPosts) > 0): ?>
    <div class="block block-related-blog-posts">
        <div class="block-title">
            <strong><span><?php echo $this->__('Blog posts') ?></span></strong>
        </div>
        <div class="block-content">
            <ul class="list_of_blog_posts">
                <?php foreach ($blogPosts as $blogPost): ?>
                    <li><a href="<?php echo Mage::helper('productblogconnector/data')->getBlogPostUrl($blogPost); ?>"><?php echo $blogPost->getTitle(); ?></a></li>
                <?php endforeach; ?>
            </ul>
        </div>
    </div>
<?php endif; ?>